<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.tictactoe.controller.TicTacToeController">
    <BorderPane>
        <center>
            <GridPane alignment="CENTER" hgap="5.0" vgap="5.0">

                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>

                <Button fx:id="button1" styleClass="Custom-Button" maxHeight="100.0" maxWidth="100.0" minHeight="100.0"
                        minWidth="100.0" onAction="#clickedButton"/>

                <Button fx:id="button2" styleClass="Custom-Button" maxHeight="100.0" maxWidth="100.0" minHeight="100.0"
                        minWidth="100.0" onAction="#clickedButton" GridPane.columnIndex="1"/>

                <Button fx:id="button3" styleClass="Custom-Button" maxHeight="100.0" maxWidth="100.0" minHeight="100.0"
                        minWidth="100.0" onAction="#clickedButton" GridPane.columnIndex="2"/>

                <Button fx:id="button4" styleClass="Custom-Button" maxHeight="100.0" maxWidth="100.0" minHeight="100.0"
                        minWidth="100.0" onAction="#clickedButton" GridPane.rowIndex="1"/>

                <Button fx:id="button5" styleClass="Custom-Button" maxHeight="100.0" maxWidth="100.0" minHeight="100.0"
                        minWidth="100.0" onAction="#clickedButton" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Button fx:id="button6" styleClass="Custom-Button" maxHeight="100.0" maxWidth="100.0" minHeight="100.0"
                        minWidth="100.0" onAction="#clickedButton" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                <Button fx:id="button7" styleClass="Custom-Button" maxHeight="100.0" maxWidth="100.0" minHeight="100.0"
                        minWidth="100.0" onAction="#clickedButton" GridPane.rowIndex="2"/>

                <Button fx:id="button8" styleClass="Custom-Button" maxHeight="100.0" maxWidth="100.0" minHeight="100.0"
                        minWidth="100.0" onAction="#clickedButton" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Button fx:id="button9" styleClass="Custom-Button" maxHeight="100.0" maxWidth="100.0" minHeight="100.0"
                        minWidth="100.0" onAction="#clickedButton" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>

                <BorderPane.margin>
                    <Insets top="5.0"/>
                </BorderPane.margin>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </GridPane>

        </center>

        <left>
            <VBox prefHeight="300.0" prefWidth="110.0" BorderPane.alignment="TOP_CENTER">

                <Label text="Player X">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </padding>
                </Label>

                <Label text="Score: 0">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </padding>
                </Label>

            </VBox>
        </left>

        <right>
            <VBox prefWidth="110.0" BorderPane.alignment="TOP_CENTER">

                <Label text="Player O">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </padding>
                </Label>

                <Label text="Score: 0">
                    <font>
                        <Font size="24.0"/>
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
                    </padding>
                </Label>

            </VBox>
        </right>
        <bottom>
            <Button onAction="#reset" alignment="BOTTOM_CENTER" mnemonicParsing="false" text="Reset"
                    textAlignment="CENTER" BorderPane.alignment="CENTER">
                <font>
                    <Font size="14.0"/>
                </font>
                <BorderPane.margin>
                    <Insets bottom="5.0"/>
                </BorderPane.margin>
            </Button>
        </bottom>
    </BorderPane>
</VBox>
