<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.tictactoe.controller.TicTacToeController">
    <BorderPane>
        <center>
            <GridPane alignment="CENTER" hgap="5.0" vgap="5.0">

                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>

                <Button maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" onMouseClicked="#clickedButton1" text=" " textFill="RED" />

                <Button maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" onMouseClicked="#clickedButton2" text=" " textFill="BLUE" GridPane.columnIndex="1" />

                <Button maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" onMouseClicked="#clickedButton3" text=" " GridPane.columnIndex="2" />

                <Button maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" onMouseClicked="#clickedButton4" text=" " GridPane.rowIndex="1" />

                <Button maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" onMouseClicked="#clickedButton5" text=" " GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Button maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" onMouseClicked="#clickedButton6" text=" " GridPane.columnIndex="2" GridPane.rowIndex="1" />

                <Button maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" onMouseClicked="#clickedButton7" text=" " GridPane.rowIndex="2" />

                <Button maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" onMouseClicked="#clickedButton8" text=" " GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Button maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" onMouseClicked="#clickedButton9" text=" " GridPane.columnIndex="2" GridPane.rowIndex="2" />

                <opaqueInsets>
                    <Insets />
                </opaqueInsets>

                <BorderPane.margin>
                    <Insets top="5.0" />
                </BorderPane.margin>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
            </GridPane>

        </center>

        <left>
            <VBox prefWidth="110.0" BorderPane.alignment="TOP_CENTER">

                <Label text="Player 1">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </Label>

                <Label text="Score: 0">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </Label>

            </VBox>
        </left>

        <right>
            <VBox prefWidth="110.0" BorderPane.alignment="TOP_CENTER">

                <Label text="Player 2">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </Label>

                <Label text="Score: 0">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </Label>

            </VBox>
        </right>
    </BorderPane>
</VBox>
